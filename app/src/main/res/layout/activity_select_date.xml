<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking.SelectDateActivity"
    android:padding="25dp"
    android:orientation="vertical"
    android:background="#F5F2FB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp"
            android:text="เลือกวันที่"
            android:textColor="#666161"
            android:textSize="20sp" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_calendar"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="190dp"
            android:layout_alignEnd="@+id/tvdate"
            android:id="@+id/selectdate"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmdate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/selectdate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_login_button"
            android:text="ยืนยัน"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Homebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/home"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/AllReservDetailbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="155dp"
            android:src="@drawable/calendarr" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/list"
            android:id="@+id/Profilrbtn"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="270dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8870B8"
            android:layout_above="@id/Profilrbtn"
            android:layout_marginBottom="10dp">
        </TextView>
    </RelativeLayout>

</RelativeLayout>